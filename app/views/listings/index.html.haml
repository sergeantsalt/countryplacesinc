- model_class = Listing
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:street_num)
      %th= model_class.human_attribute_name(:street)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:short_description)
      / %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:state)
      / %th= model_class.human_attribute_name(:postcode)
      / %th= model_class.human_attribute_name(:county)
      / %th= model_class.human_attribute_name(:latitude)
      / %th= model_class.human_attribute_name(:longitude)
      / %th= model_class.human_attribute_name(:address)
      / %th= model_class.human_attribute_name(:price)
      / %th= model_class.human_attribute_name(:acres)
      / %th= model_class.human_attribute_name(:hits)
      / %th= model_class.human_attribute_name(:featured)
      / %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @listings.each do |listing|
      %tr
        %td= link_to listing.id, listing_path(listing)
        %td= listing.street_num
        %td= listing.street
        %td= listing.title
        %td= listing.short_description
        / %td= listing.description
        %td= listing.city
        %td= listing.state
        / %td= listing.postcode
        / %td= listing.county
        / %td= listing.latitude
        / %td= listing.longitude
        / %td= listing.address
        / %td= listing.price
        / %td= listing.acres
        / %td= listing.hits
        / %td= listing.featured
        / %td= listing.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_listing_path(listing), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), listing_path(listing), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_listing_path, :class => 'btn btn-primary'
